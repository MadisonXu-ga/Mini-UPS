<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/ups</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">passw0rd</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>


        <mapping class="org.example.domain.ABookTruck"/>
        <mapping class="org.example.domain.ACKs"/>
        <mapping class="org.example.domain.AStartDeliver"/>
        <mapping class="org.example.domain.Package"/>
        <mapping class="org.example.domain.Truck"/>
        <mapping class="org.example.domain.UDeliveryLocation"/>
        <mapping class="org.example.domain.UGoDeliver"/>
        <mapping class="org.example.domain.UGoPickup"/>
        <mapping class="org.example.domain.UQuery"/>

    </session-factory>
</hibernate-configuration>
